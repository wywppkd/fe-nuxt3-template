{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --dotenv .env.dev --host",
    "dev:test": "nuxt dev --dotenv .env.test --host",
    "build:dev": "nuxt build --dotenv .env.dev",
    "build:test": "nuxt build --dotenv .env.test",
    "build:prod": "nuxt build --dotenv .env.prod",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "husky install",
    "postinstall": "nuxt prepare",
    "lint": "eslint",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,vue,md,json,css,scss,less}'"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,vue}": "npm run lint",
    "**/*.{js,jsx,tsx,ts,vue,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "normalize.css": "^8.0.1",
    "nuxt": "^3.12.4",
    "nuxt-proxy": "^0.4.1",
    "pinia": "^2.1.7",
    "tailwindcss": "^3.4.7",
    "vue": "^3.4.33"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.0.9",
    "@nuxt/eslint": "^0.3.13",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "element-plus": "^2.7.7",
    "eslint": "9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "8.0.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sass": "^1.77.8"
  }
}
